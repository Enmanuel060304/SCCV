@model CapaModelo.Venta
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Factura</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .invoice-header {
            margin-bottom: 30px;
            border-bottom: 2px solid #007bff;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .invoice-header img {
            max-width: 150px;
        }
        .invoice-title {
            font-size: 2.5rem;
            color: #007bff;
            margin-bottom: 0;
        }
        .section-title {
            font-size: 1.25rem;
            color: #007bff;
            border-bottom: 1px solid #007bff;
            padding-bottom: 5px;
            margin-bottom: 15px;
        }
        .invoice-details, .customer-details, .employee-details {
            margin-bottom: 20px;
        }
        .invoice-table th {
            background-color: #007bff;
            color: #fff;
        }
        .invoice-table th, .invoice-table td {
            text-align: left;
        }
        .invoice-footer {
            margin-top: 30px;
            text-align: center;
            font-size: 12px;
            border-top: 2px solid #007bff;
            padding-top: 10px;
        }
        .totals-table th, .totals-table td {
            text-align: right;
        }
        .totals-table th {
            width: 70%;
        }
        .bg-light-gray {
            background-color: #f8f9fa;
        }
        .btn-print {
            margin: 20px 0;
            text-align: center;
        }
    </style>
</head>
<body>
<div style="font-size: 11px; text-align: right;">
    <center>
        <button type="button" class="btn btn-secondary" onclick="javascript:imprSelec('documento')">Imprimir</button>
    </center>
</div>
<div class="container bg-light-gray py-4" id="documento">
    <!-- Cabecera de la factura -->
    <div class="invoice-header">
        <div>
            <h3>Joyeria ADI</h3>
            <p><span>@Html.DisplayTextFor(model => model.oTienda.Direccion)</span></p>
            <p>Teléfono:+505 57526047</p>
            <p>Atendido por: <span>@Html.DisplayTextFor(model => model.oUsuario.Nombres) @Html.DisplayTextFor(model => model.oUsuario.Apellidos)</span></p>
        </div>
        <div class="text-right">
            <h1 class="invoice-title">Factura</h1>
            <p></p>
            <p>Número de Factura:  <span>@Html.DisplayTextFor(model => model.Codigo)</span></p>
            <p>Fecha: <span>@Html.DisplayTextFor(model => model.FechaRegistro)</span></p>
        </div>
    </div>
    <!-- Información del cliente -->
    <div class="row customer-details">
        <div class="col-12">
            <h4 class="section-title">Cliente</h4>
            <p>Nombre: <span>@Html.DisplayTextFor(model => model.oCliente.Nombre)</span></p>
            <p>Dirección del Cliente: <span>@Html.DisplayTextFor(model => model.oCliente.Direccion)</span></p>
            <p>Teléfono: <span>@Html.DisplayTextFor(model => model.oCliente.Telefono)</span></p>
        </div>
    </div>
    <!-- Información del empleado -->
    <h4 class="section-title">Detalle Productos</h4>
    
    <!-- Tabla de artículos -->
    <div class="row">
        <div class="col-12">
            <table class="table table-bordered invoice-table">
                <thead>
                    <tr>
                        <th>Cantidad</th>
                        <th>Descripción</th>
                        <th>Precio Unitario</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.oListaDetalleVenta)
                        {
                            <tr>
                            <td>@Html.DisplayFor(modelItem => item.Cantidad)</td>
                            <td>@Html.DisplayFor(modelItem => item.NombreProducto)</td>
                            <td>@Html.DisplayFor(modelItem => item.TextoPrecioUnidad)</td>
                            <td>@Html.DisplayFor(modelItem => item.TextoImporteTotal)</td>
                            </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>
    <!-- Totales -->
    <div class="row">
        <div class="col-12 col-md-6 offset-md-6">
            <table class="table table-bordered totals-table">
                <tbody>
                    <tr>
                        <th>Pago con:</th>
                        <td> <span>@Html.DisplayTextFor(model => model.TextoImporteRecibido)</span> </td>
                    </tr>
                    <tr>
                        <th>Cambio:</th>
                        <td> <span>@Html.DisplayTextFor(model => model.TextoImporteCambio)</span> </td>
                    </tr>
                    <tr>
                        <th>Total</th>
                        <td><span id="totalcosto">@Html.DisplayTextFor(model => model.TextoTotalCosto)</span></td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
    <!-- Pie de página -->
    <div class="row invoice-footer">
        <div class="col-12">
            <p>Gracias por su Compra.</p>
        </div>
    </div>
</div>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
<script>

     function imprSelec(nombre) {
            var printContents = document.getElementById(nombre).innerHTML;
            var originalContents = document.body.innerHTML;

            document.body.innerHTML = printContents;
            window.print();
            document.body.innerHTML = originalContents;
        }
</script>
</body>
</html>


@{
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    @Styles.Render("~/Content/css")
    <style>
        #logn-d {
            background-color:#10707f;
            background-repeat: no-repeat;
            background-attachment: fixed;
            background-size: cover;
        }
    </style>
</head>
<body id="logn-d">
    <div class="container" >
        <div class="row">
            <div class="col-12">
                <div class="d-flex align-items-center min-vh-100">
                    <div class="w-100 d-block my-5">
                        <div class="row justify-content-center">
                            <div class="col-md-8 col-lg-5">
                                <div class="card" style="background: rgba(255,255,255,0.4); border-radius: max(3em)">
                                    <div class="card-body">
                                        <div class="text-center mb-4 mt-3" >
                                            <a href="#">
                                                <span><img src="@Url.Content("~/Imagenes/logo_ADI.png")" alt="" height="150" width="150" ></span>
                                            </a>
                                        </div>
                                        @if (!string.IsNullOrEmpty(ViewBag.Error))
                                        {
                                            <div class="alert alert-danger">
                                                @ViewBag.Error
                                            </div>
                                        }

                                        <form action="@Url.Content("~/Login/Index")" method="post" class="p-2">
                                            <div class="form-group">
                                                <label for="emailaddress" style="color: white">Correo</label>
                                                <input class="form-control" type="email" name="correo" required="" autocomplete="off" placeholder="Ingresa Correo">
                                            </div>
                                            <div class="form-group">
                                                <label for="password"style="color: white">Contraseña</label>
                                                <input class="form-control" type="password" required="" name="clave" autocomplete="off" placeholder="Ingresa Contraseña">
                                            </div>

                                            <div class="mb-3 text-center">
                                                <button class="btn btn-primary btn-block" type="submit">Ingresar</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                                <div class="row mt-4">
                                    <div class="col-sm-12 text-center">
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div> 
                </div>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
